<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/layoutMovilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <ImageView
                style="@style/ImageFooter"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_movilidad_black" />
            <TextView
                style="@style/textFooter"
                android:text="Movilidad" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAdministracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layoutMovilidad"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ImageView
                style="@style/ImageFooter"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_administracion_black" />

            <TextView
                style="@style/textFooter"
                android:text="AdministraciÃ³n"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutSeguridad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/layoutAdministracion"
            android:orientation="vertical">

            <ImageView
                style="@style/ImageFooter"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_seguridad_black" />

            <TextView
                style="@style/textFooter"
                android:text="Seguridad"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/layoutSeguridad"
            android:orientation="vertical">
            <ImageView
                style="@style/ImageFooter"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_sos_black" />
            <TextView
                style="@style/textFooter"
                android:layout_width="match_parent"
                android:text="S.O.S."
                android:gravity="center_horizontal" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

