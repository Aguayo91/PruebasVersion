<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLogoAmarrillo"
    tools:context=".UI.Activities.Codigo.Modificar.ModificarTelActivity">


    <ImageView
        android:id="@+id/imageSocioMas"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_socio_mas_x2"/>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_below="@id/imageSocioMas"
        android:id="@+id/txtNumeroTel"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:mtf_image="@mipmap/ic_phone_black"
        app:mtf_labelColor="@android:color/black"
        android:layout_marginBottom="15dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ingresa_tu_nuevo_n_mero_telef_nico"
            android:textColor="#333"
            android:textColorHint="@android:color/black"
            android:inputType="phone"
            android:textSize="15sp"
            android:maxLength="10"/>

    </com.github.florent37.materialtextfield.MaterialTextField>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnConfirmar"
        android:layout_below="@+id/txtNumeroTel"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Confirmar "
        app:backgroundTint="@color/colorPrimaryDarker" />


</RelativeLayout>
