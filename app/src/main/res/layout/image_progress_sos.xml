<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="150dp"
    >

    <com.jackandphantom.circularprogressbar.CircleProgressbar
        android:id="@+id/circleProgresBar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cpb_roundedCorner="true"
        app:cpb_foregroundProgressWidth="20"
        app:cpb_backgroundProgressWidth="20"
        app:cpb_progress="0"
        app:cpb_foregroundProgressColor="@color/colorPrimary"
        app:cpb_touchEnabled="true">
    </com.jackandphantom.circularprogressbar.CircleProgressbar>

    <ImageView
        android:id="@+id/imageCancelar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_cancelar_sos"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>