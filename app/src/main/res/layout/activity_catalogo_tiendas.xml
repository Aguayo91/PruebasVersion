<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activities.Zonas_Ubicaciones.CatalogoTiendasActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/toolbar"/>
        </android.support.design.widget.AppBarLayout>

        <se.emilsjolander.stickylistheaders.ExpandableStickyListHeadersListView
            android:id="@+id/listViewCatalogoZonas"
            android:layout_below="@id/appBarLayout"
            android:layout_above="@+id/footerNavegacion"
            android:layout_width="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:fastScrollEnabled="true"
            android:fastScrollAlwaysVisible="true"
            android:layout_height="match_parent"></se.emilsjolander.stickylistheaders.ExpandableStickyListHeadersListView>

        <com.sociomas.core.UI.Controls.Notification.FooterNavegacion
            android:id="@+id/footerNavegacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        </com.sociomas.core.UI.Controls.Notification.FooterNavegacion>
    </RelativeLayout>

    <include layout="@layout/navigation_drawer"/>

</android.support.v4.widget.DrawerLayout>
