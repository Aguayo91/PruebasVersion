<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/tarjeta_cardCornerRadius"
    card_view:cardElevation="@dimen/tarjeta_cardElevation"
    card_view:contentPadding="@dimen/card_padding"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgActividad"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/perfil_ekt" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgActividad"
            android:text="RICARDO DOMINGUEZ VALLE"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_tipo"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/tvName"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tvName"
            android:src="@drawable/icono_pendiente_autorizar_x2" />


        <TextView
            android:id="@+id/tvNumeroEmpleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:text="/10010439"
            android:textColor="#bcbaba"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvName"
            android:layout_marginRight="2dp"
            android:layout_marginTop="8dp"
            android:text="12/04/2017"
            android:textColor="#bcbaba"
            android:textSize="11sp"

            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvIncidencia"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/imgActividad"
            android:text="Conferencia"
            android:textAllCaps="true"
            android:textColor="#bcbaba"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvIncidencia"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imgActividad"
            android:gravity="fill_horizontal"
            android:text="Tengo que ir a ver a mi abuelita al hospital por que está muy grave y tengo que llevarle sus medicinas. Lo más seguro es que sean dos dias."
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvComentario"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/imgActividad"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/tvInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:text="Inicio:"
                android:textColor="@color/azul_claro"
                android:textSize="9.5dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/tvInicio"
                android:text="12/04/2017"
                android:textColor="@color/azul_claro"
                android:textSize="10dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="12/04/2017"
                android:textColor="@color/azul_claro"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTermina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/tvDate2"
                android:text="Termina:"
                android:textColor="@color/azul_claro"
                android:textSize="9.5dp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/imgPermisos"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imgActividad"
            android:src="@drawable/ic_permisos" />

        <TextView
            android:id="@+id/tvTotalPermisos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imgPermisos"
            android:text="0"
            android:textColor="@color/gris_info"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/imgTimeLimit"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tvTotalPermisos"
            android:src="@drawable/ic_timelimit" />

        <TextView
            android:id="@+id/tvTotalRetardos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imgTimeLimit"
            android:text="0"
            android:textColor="@color/gris_info"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imgNoAsistio"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@id/rl1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tvTotalRetardos"
            android:src="@drawable/ic_lack" />

        <TextView
            android:id="@+id/tvTotalFaltas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imgNoAsistio"
            android:text="0"
            android:textColor="@color/gris_info"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imgSalidaAntes"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tvTotalFaltas"
            android:src="@drawable/ic_leave" />

        <TextView
            android:id="@+id/tvSalidaAntes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/imgSalidaAntes"
            android:text="0"
            android:textColor="@color/gris_info"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imgSalidaAntes"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="#bcbaba"
            android:padding="5dp" />


        <RelativeLayout
            android:id="@+id/layoutComentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl2"
            android:layout_marginTop="20dp"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/txtComentarioPermiso"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_redondo"
                android:hint="Comentarios"
                android:paddingLeft="10dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAutorizar"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txtComentarioPermiso"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:text="@string/autorizar"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:backgroundTint="@color/verde" />


            <android.support.v7.widget.AppCompatButton

                android:id="@+id/btnRechazar"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_below="@id/txtComentarioPermiso"
                android:layout_marginRight="2dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/btnAutorizar"
                android:text="@string/rechazar"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:backgroundTint="@color/rojo_fuerte" />


        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>