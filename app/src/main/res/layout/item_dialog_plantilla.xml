<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgCerrar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cerrar"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/svEmpleados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgCerrar"
        android:clickable="true"
        style="@style/searchEditText"/>
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/svEmpleados"
        android:background="@color/amarillo_dialogo"
        android:text="@string/aceptar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:gravity="center"
        android:padding="10dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvPlantilla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitulo"/>
</RelativeLayout>