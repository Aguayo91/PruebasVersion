<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#EAEAEA"
    >

    <ImageView
        android:id="@+id/imageMaker"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_add_black"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvQueryTitle"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/imgCheck"
        android:text="NETA SYSTEMS"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/imageMaker"
        android:singleLine="false"/>


    <ImageView
        android:id="@+id/imgCheck"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:src="@drawable/ic_check_yellow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>

    <View
        android:visibility="visible"
        android:id="@+id/separador"
        android:layout_below="@id/tvQueryTitle"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gris_claro"/>



</RelativeLayout>

