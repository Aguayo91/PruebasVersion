<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvContactoNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Contacto 1: "
            android:textColor="#373333"
            android:textSize="16sp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_centerInParent="true" />

        <EditText
            android:hint="nombre"
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:paddingLeft="10dp"
            />


    </LinearLayout>

    <RelativeLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_pais" />

        <Spinner
            android:id="@+id/spinnerPais"
            android:layout_marginLeft="10dp"
            android:spinnerMode="dialog"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
        </Spinner>

        <ImageView
            android:id="@+id/imageContacto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_avatar_grey"
            android:layout_toRightOf="@+id/spinnerPais"/>


        <EditText
            android:hint="Número telefónico"
            android:id="@+id/textNumeroTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/imageContacto"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:maxLength="10"
            android:background="#FFFFFF"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#9B9797"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"/>

</LinearLayout>