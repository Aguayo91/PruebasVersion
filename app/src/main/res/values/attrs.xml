<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="BadgeControl">
        <attr name="badgeColor" format="color"/>
        <attr name="counter" format="string"/>

    </declare-styleable>

    <declare-styleable name="ControlDiaSem">

        <attr name="title" format="string"/>
        <attr name="iconoRef" format="reference"/>

    </declare-styleable>
    <declare-styleable name="ControlFilterAsistencias">

        <attr name="titleFilter" format="string"/>
        <attr name="iconoRefFilter" format="reference"/>
        <attr name="iconoRefFilterGrey" format="reference"/>

    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="angle" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="arrowCenter" format="boolean" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TextViewMoney">
        <attr name="format" format="string"/>
        <attr name="symbol" format="string"/>
        <attr name="amount" format="string"/>
        <attr name="symbolMargin" format="dimension"/>
        <attr name="decimalMargin" format="dimension"/>
        <attr name="decimalSeparator" format="string"/>

        <attr name="baseTextSize" format="dimension"/>
        <attr name="symbolTextSize" format="dimension"/>
        <attr name="decimalDigitsTextSize" format="dimension"/>

        <attr name="symbolGravity">
            <flag name="start" value="0x01"/>
            <flag name="end" value="0x02"/>
            <flag name="top" value="0x04"/>
            <flag name="bottom" value="0x08"/>
        </attr>

        <attr name="decimalGravity" format="enum">
            <enum name="top" value="4"/>
            <enum name="bottom" value="8"/>
        </attr>

        <attr name="gravity">
            <enum name="left" value="0x01"/>
            <enum name="right" value="0x02"/>
            <enum name="top" value="0x04"/>
            <enum name="bottom" value="0x08"/>
            <enum name="centerVertical" value="0x16"/>
            <enum name="centerHorizontal" value="0x32"/>
            <enum name="center" value="0x48"/>
        </attr>

        <attr name="typefaceMoney">
            <enum name="bold_type" value="0x01" />
            <enum name="italic_type" value="0x02" />
            <enum name="normal_type" value="0x04" />
        </attr>

        <attr name="baseTextColor" format="color"/>
        <attr name="symbolTextColor" format="color"/>
        <attr name="decimalTextColor" format="color"/>

        <attr name="includeDecimalSeparator" format="boolean"/>
        <attr name="decimalUnderline" format="boolean"/>
        <attr name="fontPath" format="string"/>
    </declare-styleable>

</resources>
