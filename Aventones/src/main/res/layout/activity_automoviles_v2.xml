<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/blanco"
    tools:context="com.sociomas.aventones.UI.Activities.Carros.CarsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/toolbar"/>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footerNavegacion"
            android:layout_below="@+id/appBarLayout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.sociomas.aventones.UI.Controls.EditTexts.EditTextBackground
                android:id="@+id/txtAutomoviles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                app:hintText="@string/que_auto"
                app:icono="@drawable/ic_coche"/>

            <com.sociomas.aventones.UI.Controls.EditTexts.EditTextMaxLength
                android:id="@+id/txtPlacas"
                android:layout_below="@id/txtAutomoviles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                app:hintText="@string/placas"
                app:icono="@drawable/ic_plate" />

            <ImageView
                android:id="@+id/imgInfoPlacas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_info_circle_black"
                android:layout_below="@+id/txtAutomoviles"
                android:layout_marginTop="5dp"
                android:onClick="infoPlacas"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/RelativeBtnColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPlacas"
                android:clickable="true"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imgColor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_color"/>

                <TextView
                    android:id="@+id/btnColor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/imgColor"
                    android:background="@drawable/cuadro_fondo_gris"
                    android:hint="@string/color"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorGrisInfo"
                    android:textAlignment="textStart" />

            </RelativeLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_arrow_spinner_black_down"
                android:layout_below="@id/txtPlacas"
                android:layout_alignParentRight="true"
                android:layout_marginTop="19dp"
                android:layout_marginRight="25dp"/>

            <RelativeLayout
                android:id="@+id/rllinea1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/RelativeBtnColor"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/line_gris"/>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnAsientos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                app:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_asientos_transparente"
                app:fabSize="mini"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rlbtnCapacidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rllinea1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/imgInfoCapacidad"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_info_gris"
                    android:onClick="infoCapacidad"/>

                <TextView
                    android:id="@+id/tvCapacidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacidad"
                    android:textStyle="normal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imgInfoCapacidad"
                    android:textColor="@color/colorGrisInfo"/>

                <com.sociomas.aventones.UI.Controls.EditTexts.CustomNumberPicker
                    android:id="@+id/NumberPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rllinea2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/rlbtnCapacidad"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/line_gris"/>

            <RelativeLayout
                android:id="@+id/rlGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rllinea2"
                android:layout_marginRight="15dp">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnGuardar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="13dp"
                    android:onClick="AgregarAuto"
                    app:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_guardar_v2"
                    app:fabSize="mini"/>
                <TextView
                    android:id="@+id/txtGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textAllCaps="true"
                    android:text="@string/Guardar_cambios"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGrisInfo"
                    android:layout_toRightOf="@+id/btnGuardar" />
                <ImageView
                    android:id="@+id/imgInfoGuardar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_info_gris"
                    android:onClick="infoCapacidad"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rllinea3"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/rlGuardar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/line_gris"/>

            <RelativeLayout
                android:id="@+id/rlAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rllinea3"
                android:layout_marginRight="15dp">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnAgregarV2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="13dp"
                    android:onClick="AgregarAuto"
                    app:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_add"
                    app:fabSize="mini"/>
                <TextView
                    android:id="@+id/txtAgregarV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/Agregar_Auto1"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGrisInfo"
                    android:layout_toRightOf="@+id/btnAgregarV2"
                    android:textAllCaps="true"/>
                <ImageView
                    android:id="@+id/imgInfoAgregar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_info_gris"
                    android:onClick="infoCapacidad"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rllinea4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/rlAgregar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/line_gris"/>

            <RelativeLayout
                android:id="@+id/rlAutos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rllinea4"
                android:layout_marginRight="15dp">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnAutos"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="13dp"
                    android:onClick="AgregarAuto"
                    app:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_coche"
                    app:fabSize="mini"/>
                <TextView
                    android:id="@+id/txtAutos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/ver_mis_autos"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGrisInfo"
                    android:layout_toRightOf="@+id/btnAutos"
                    android:textAllCaps="true"/>
                <ImageView
                    android:id="@+id/imgAutos"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_info_gris"
                    android:onClick="infoCapacidad"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Next"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:onClick="Next"
                android:textColor="@android:color/black"
                android:background="@drawable/circle_yellow"
                android:layout_below="@+id/rlAutos"
                android:textSize="17sp"
                android:layout_centerHorizontal="true" />
                </RelativeLayout>
        </ScrollView>
        <com.sociomas.core.UI.Controls.Notification.FooterNavegacion
            android:id="@+id/footerNavegacion"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.sociomas.core.UI.Controls.Notification.FooterNavegacion>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnAgregar"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:onClick="AgregarAuto"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_add"
            app:fabSize="mini"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Agregar_Auto"
            android:textColor="@color/colorGrisInfo"
            android:textSize="14sp"
            android:elevation="12dp"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@+id/btnAgregar"
            android:layout_marginRight="5dp"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"/>
    </RelativeLayout>
    <include layout="@layout/navigation_drawer"/>
</android.support.v4.widget.DrawerLayout>
